{
  "name": "TrainingServer",
  "version": "0.1.0",
  "main": "app/server.js",
  "scripts": {
    "init": "npm install && bundle install",
    "_production:build": "npx babel app --out-dir dist --copy-files --extensions '.ts,.tsx'",
    "_production": "npx forever -f -m 5 dist/app_startup.js",
    "test:integration": "NODE_ENV=test npx jest --testPathPattern=\".+tests/integration/.+.spec.ts\" --runInBand --forceExit",
    "test:unit": "NODE_ENV=test npx jest --testPathPattern=\".+tests/unit/.+.spec.ts\"",
    "test": "npx concurrently --names \"unit, integration\" -c \"blue,green\" \"npm run test:unit\" \"./bin/wait-for localhost:5433 -- npm run test:integration\"",
    "test:setup": "docker-compose -f docker/app/docker-compose.test.yml up --build -d",
    "dev:setup": "docker-compose -f docker/app/docker-compose.dev.yml up --build -d",
    "dev": "NODE_ENV=development npx concurrently --kill-others --names \"lint,node\" -c \"blue,green\" \"npx tsc --pretty --noEmit --watch\" \"npx nodemon --watch app --inspect=0.0.0.0 app/app_startup.ts\"",
    "production:test": "docker-compose -f docker/app/docker-compose.yml -f docker/app/docker-compose.prod.override.yml -f docker/app/docker-compose.prod-test.override.yml up --build -d",
    "db:production": "docker-compose -f docker/db/docker-compose.db.yml -f docker/db/docker-compose.db-production.override.yml up --build -d",
    "db:migrate:create": "npx sequelize migration:create",
    "db:migrate:run": "npx sequelize db:migrate",
    "db:migrate:undo": "npx sequelize db:migrate:undo",
    "generate:doc": "npx apidoc -i app/ -o docs/",
    "format": "npx prettier --write \"{app,tests}/**/*.ts\"",
    "lint": "npx tsc --noEmit && npx eslint --ext ts,js app tests"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run generate:doc && git add docs && lint-staged && npm run lint",
      "post-merge": "npm install"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "npm run format",
      "git add"
    ]
  },
  "author": "Levi Bostian <levi@curiosityio.com>",
  "dependencies": {
    "@owja/ioc": "^1.0.0-beta.4",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-sequence": "https://github.com/sirap-group/connect-sequence/tarball/dacd6d9925",
    "connect-trim-body": "^0.0.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-mung": "^0.5.1",
    "express-routes-versioning": "^1.0.1",
    "express-validator": "^5.3.1",
    "forever": "^1.0.0",
    "helmet": "^3.18.0",
    "honeybadger": "^1.3.0",
    "humps": "^2.0.1",
    "lodash.isequal": "^4.5.0",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "pg": "^6.4.2",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.19.0",
    "uid2": "^0.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/bluebird": "^3.5.26",
    "@types/compression": "0.0.36",
    "@types/connect-sequence": "^2.1.0",
    "@types/connect-trim-body": "0.0.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/express-mung": "^0.5.2",
    "@types/express-routes-versioning": "^1.0.0",
    "@types/helmet": "0.0.43",
    "@types/humps": "^1.1.2",
    "@types/jest": "^24.0.13",
    "@types/lodash.isequal": "^4.5.5",
    "@types/node": "^11.13.4",
    "@types/passport": "^1.0.0",
    "@types/passport-http": "^0.3.8",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/supertest": "^2.0.7",
    "@types/uid2": "0.0.0",
    "@types/validator": "^10.11.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "apidoc": "^0.17.7",
    "babel-jest": "^24.9.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "concurrently": "^4.1.0",
    "eslint": "^6.0.1",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "jest-watch-typeahead": "^0.3.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "prettier": "^1.17.1",
    "sequelize-cli": "^5.5.0",
    "supertest": "^4.0.2",
    "typescript": "^3.4.2"
  }
}
