{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Local development debug",
      "protocol": "inspector",
      "port": 9229,
      "address": "0.0.0.0",
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}",
      "timeout": 20000,
      "stopOnEntry": false,
      "remoteRoot": "${workspaceFolder}",
      "preLaunchTask": "local_dev_debug",
      "restart": true
    }
  ]
}
